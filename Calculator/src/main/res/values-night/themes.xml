<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android1" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#80113366</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#5599ccff</item>
        <item name="colorSecondaryVariant">#55406092</item>
        <item name="colorOnSecondary">#48689b</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">#77C09FE5</item>
        <item name="colorOnPrimarySurface">#8048689b</item>
        <item name="CalculatorBackground">@drawable/star_sky</item>
    </style>

    <style name="Button">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">@dimen/outer_indent</item>
        <item name="android:background">@drawable/button</item>
    </style>
</resources>