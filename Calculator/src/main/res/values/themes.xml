<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android1" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6C9ADA</item>
        <item name="colorPrimaryVariant">#CC98B4DD</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CCA9E1F9</item>
        <item name="colorSecondaryVariant">#CC017EC6</item>
        <item name="colorOnSecondary">#99ccff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">#CC9347E8</item>
        <item name="colorOnPrimarySurface">#CC2A75ED</item>
        <item name="CalculatorBackground">@drawable/blue_field</item>
    </style>

    <style name="Button">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">@dimen/outer_indent</item>
        <item name="android:background">@drawable/button</item>
    </style>
</resources>